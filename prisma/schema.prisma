// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id          String @id @default(uuid())
  title       String
  created_at  DateTime

  @@map("habits")
}

model Character {
  id            String @id @default(uuid())
  name          String
  race          String
  class         String
  level         Int
  experience    Int
  hitPoints     Int
  maxHP         Int @default(0)
  alignment     String
  playerId      String
  playerName    String
  strength      Int @default(0)
  modStr        Int @default(0)
  dexterity     Int @default(0)
  modDex        Int @default(0)
  constitution  Int @default(0)
  modCon        Int @default(0)
  intelligence  Int @default(0)
  modInt        Int @default(0)
  wisdom        Int @default(0)
  modWis        Int @default(0)
  charisma      Int @default(0)
  modCha        Int @default(0)
  ammo          Int @default(0)
  ration        Int @default(0)
  portrait      String @default("")
  channelId     String
  createdAt     DateTime @default(now())

  @@map("characters")
}